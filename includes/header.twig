<!-- Header -->
<header class="template-header">

	<div class="container">
		<div class="company">
			<div class="template-logo">
				{{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
			</div>

			<div class="template-companyname">
				{{widget('companyname', 'companyname', {"business": "profile"})|raw}}
			</div>
		</div>

		<div class="template-navigation">
			{{widget('extendednavigation', 'extendednavigation', {"align":"right"})|raw}}
		</div>

				{% if plugins.ecommerce.store.live %}
				<div class="ecommerce-bar">
					<div class="container">
						<div class="template-basket">{{widget('ecombasket', 'shopbasket', {})|raw}}</div>
					</div>
				</div>
				{% endif %}

	</div>

</header>
<!-- End Header -->
